<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/converter_toolbar">

            <include layout="@layout/layout_converter_toolbar"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <EditText
        android:id="@+id/number"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Number of units"
        android:inputType="number" />

    <Spinner
        android:id="@+id/leftSpinner"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Converted To"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="22dp"/>

    <Spinner
        android:id="@+id/rightSpinner"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="22dp" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textSize="20dp"
        android:backgroundTint="#21d102"
        />

    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textSize="22dp"/>

    <com.cookingconverter.cookingconversions.LinedEditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/converter_text"
        android:textSize="23sp"
        android:textColor="#000"
        android:padding="5dp"
        android:gravity="top"
        android:hint="Add a description or a quick converter to your conversion"
        android:imeOptions="flagNoExtractUi">

    </com.cookingconverter.cookingconversions.LinedEditText>



</LinearLayout>